<div class="container">
  <br>
  <div class="center">
    <h3>Welcome <%= current_user.name %> </h3>
  </div>
  <div class="left">
    <h5>Tools:</h5>
  </div>
  <ol>
    <br>
    <% current_user.tools.each do |tool|  %>
      <li><p> <%= link_to(tool.name, tool_path(tool.id)) %>   (Use: <%= tool.use %>)
        <%= link_to("edit", edit_tool_path(tool)) %>
        <%= link_to("delete", tool_path(tool), method: :delete, class: "example") %>
      </p></li>
    <% end  %>
  </ol>

  <br>
  <a href="<%= new_tool_path %>" class="waves-effect waves-light btn right">Add Tool</a>
</div>
